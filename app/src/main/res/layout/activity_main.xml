<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/BaseLabel"
        android:layout_width="237dp"
        android:layout_height="57dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="268dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#CEB55072"
        android:text="Weather"
        android:textAlignment="center"
        android:textColor="#DF5D4C77"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layouyt_constraintStart_toStartof="parent" />

    <AutoCompleteTextView
        android:id="@+id/SearchBar"
        android:layout_width="476dp"
        android:layout_height="76dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="524dp"
        android:fontFamily="sans-serif"
        android:hint="Enter a city name"
        android:inputType="text"
        android:popupBackground="@android:color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BaseLabel"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="287dp"


        android:layout_marginEnd="72dp"
        android:layout_marginBottom="1193dp"
        android:onClick="onSubmitButtonClick"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SearchBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dropdownSuggestion"
        android:layout_width="475dp"
        android:layout_height="63dp"
        android:padding="8sp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/SearchBar"
        app:layout_constraintStart_toStartOf="@id/SearchBar"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="354dp" />
</androidx.constraintlayout.widget.ConstraintLayout>